<UserControl x:Class="HealthAnalysisDashboard.StepsTaken"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthAnalysisDashboard"
             xmlns:syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             mc:Ignorable="d" 
             >

    <Grid Grid.Row="1">
        <Grid.DataContext>
            <local:ViewModel x:Name="viewModel"/>
        </Grid.DataContext>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid  Grid.Column="0" Margin="20,0,10,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="2" Margin="0,8,60,8" CornerRadius="10" BorderBrush="Black" >
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  >
                        <Path x:Name="stepsTakenPath"  Stretch="Uniform" Fill="Black" Width="50" Height="30">
                        </Path>
                        <TextBlock HorizontalAlignment="Center"
                                             Text="Steps Taken"
                                             FontWeight="Bold"
                                             FontSize="18"
                                             VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="#ffb902" Grid.Column="2" Margin="30,10,0,10" CornerRadius="10" BorderBrush="Black">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Distance Traveled" FontSize="12"/>
                        <TextBlock FontWeight="Bold" Text="3.2 miles" HorizontalAlignment="Center"  FontSize="18"></TextBlock>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Background="White" Grid.Row="1" CornerRadius="10" BorderBrush="Black">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <syncfusion:SfChart Margin="5,10,15,5">
                    <syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:CategoryAxis PlotOffset="10" TickLineSize="0" ShowGridLines="False">
                            <syncfusion:CategoryAxis.AxisLineStyle>
                                <Style TargetType="Line"  >
                                    <Setter Property="StrokeThickness" Value="0"/>
                                </Style>

                            </syncfusion:CategoryAxis.AxisLineStyle>
                        </syncfusion:CategoryAxis>
                    </syncfusion:SfChart.PrimaryAxis>
                    <syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:NumericalAxis Header="Steps" TickLineSize="0" Minimum="0" Maximum="12000" Interval="2000">
                            <syncfusion:NumericalAxis.AxisLineStyle>
                                <Style TargetType="Line"  >
                                    <Setter Property="StrokeThickness" Value="0"/>
                                </Style>
                            </syncfusion:NumericalAxis.AxisLineStyle>
                        </syncfusion:NumericalAxis>
                    </syncfusion:SfChart.SecondaryAxis>

                    <syncfusion:SfChart.Annotations>
                        <syncfusion:LineAnnotation StrokeDashArray="3,2" X1="-0.6" Y1="9000" X2="6.5" Y2="9000"/>
                        <syncfusion:TextAnnotation Text="Goal 9000 steps" FontWeight="Bold" X1="5.5" Y1="9700"/>
                    </syncfusion:SfChart.Annotations>

                    <syncfusion:ColumnSeries ItemsSource="{Binding StepsData}"
                                                    XBindingPath="Day" SegmentSpacing="0.6"
                                                    YBindingPath="Steps" Interior="#C6D870"
                                                    ShowTooltip="True"
                                                    EnableAnimation="True">
                        <syncfusion:ColumnSeries.TooltipTemplate>
                            <DataTemplate>
                                <StackPanel  Background="Black" Orientation="Vertical">
                                    <TextBlock Text="{Binding Item.Day}"
                    Foreground="White" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Border Height="1.5" Margin="0,5,0,5" Background="White" ></Border>
                                    <StackPanel Orientation="Horizontal" >
                                        <Border HorizontalAlignment="Left" Margin="0,0,5,0" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Background="#C6D870" Height="10" Width="10" ></Border>
                                        <TextBlock Text="{Binding Item.Steps, StringFormat={}{0} Steps}"
Foreground="White" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </StackPanel>

                                </StackPanel>
                            </DataTemplate>
                        </syncfusion:ColumnSeries.TooltipTemplate>
                    </syncfusion:ColumnSeries>
                </syncfusion:SfChart>
            </Border>
        </Grid>


        <Border Grid.Column="1" CornerRadius="10" BorderBrush="Black" Background="#D4E7C5" Margin="10,10,20,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel Margin="0,20,0,0" Grid.Column="0" >
                <TextBlock Text="Sunday Activity" HorizontalAlignment="Center" Margin="20,40,20,40" FontWeight="Bold" FontSize="18"/>
                <syncfusion:SfChart HorizontalAlignment="Center" >
                    <!-- Steps Ring -->
                    <syncfusion:DoughnutSeries ItemsSource="{Binding Steps}"
                                   XBindingPath="Category" StartAngle="-90" EndAngle="270"
                                   YBindingPath="Value" Palette="Custom"
                                      EnableAnimation="True"
                                   DoughnutSize="1"
                                   >
                        <syncfusion:DoughnutSeries.ColorModel>
                            <syncfusion:ChartColorModel>
                                <syncfusion:ChartColorModel.CustomBrushes>
                                    <SolidColorBrush Color="#C6D870"/>
                                    <SolidColorBrush Color="#97B067"/>
                                    
                                </syncfusion:ChartColorModel.CustomBrushes>
                            </syncfusion:ChartColorModel>
                        </syncfusion:DoughnutSeries.ColorModel>
                    </syncfusion:DoughnutSeries>

                    <!-- Exercise Minutes Ring -->
                    <syncfusion:DoughnutSeries ItemsSource="{Binding Exercise}"
                                   XBindingPath="Category" Palette="Custom" StartAngle="-90" EndAngle="270"
                                   YBindingPath="Value" 
                                   DoughnutSize="1"
                                         EnableAnimation="True"     
                                   Label="Exercise">
                        <syncfusion:DoughnutSeries.ColorModel>
                            <syncfusion:ChartColorModel>
                                <syncfusion:ChartColorModel.CustomBrushes>
                                    <SolidColorBrush Color="#8FA31E"/>
                                    <SolidColorBrush Color="#97B067"/>
                                </syncfusion:ChartColorModel.CustomBrushes>
                            </syncfusion:ChartColorModel>
                        </syncfusion:DoughnutSeries.ColorModel>
                    </syncfusion:DoughnutSeries>

                    <!-- Active Hours Ring -->
                    <syncfusion:DoughnutSeries ItemsSource="{Binding ActiveHours}" StartAngle="-90" EndAngle="270"
                                   XBindingPath="Category"
                                   YBindingPath="Value" Palette="Custom"
                                   DoughnutSize="1"
                                               EnableAnimation="True">
                        <syncfusion:DoughnutSeries.ColorModel>
                            <syncfusion:ChartColorModel>
                                <syncfusion:ChartColorModel.CustomBrushes>
                                    <SolidColorBrush Color="#556B2F"/>
                                    <SolidColorBrush Color="#97B067"/>
                                </syncfusion:ChartColorModel.CustomBrushes>
                            </syncfusion:ChartColorModel>
                        </syncfusion:DoughnutSeries.ColorModel>
                        <syncfusion:DoughnutSeries.CenterView>
                            <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" >
                                <StackPanel >
                                    <TextBlock Text="1800" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Margin="0,0,0,15" Text="Calories burned" FontSize="16"  HorizontalAlignment="Center"/>
                                </StackPanel>
                            </ContentControl>
                        </syncfusion:DoughnutSeries.CenterView>
                    </syncfusion:DoughnutSeries>
                </syncfusion:SfChart>

                <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" >
                    <StackPanel Margin="20,25,40,0" >
                        <TextBlock HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Text="2869" ></TextBlock>
                        <StackPanel Margin="5" Orientation="Horizontal">
                            <Path HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="stepTakanIcon" Stretch="Uniform" Fill="Black" Width="20" Height="20"></Path>
                            <TextBlock Margin="5,0,0,0" HorizontalAlignment="Center"  Text="Steps" FontSize="18" ></TextBlock>
                        </StackPanel>

                    </StackPanel>
                    <StackPanel Margin="20,25,0,0" >
                        <TextBlock HorizontalAlignment="Center"  FontSize="30" FontWeight="Bold" Text="21" ></TextBlock>
                        <StackPanel Margin="5" Orientation="Horizontal">
                            <Path HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="exerciseIcon" Stretch="Uniform" Fill="Black" Width="25" Height="25"></Path>
                            <TextBlock Margin="5,0,0,0"  HorizontalAlignment="Center" Text="Exercise" FontSize="18" ></TextBlock>
                        </StackPanel>
                        <TextBlock Margin="5,0,0,0" Text="/min" HorizontalAlignment="Center" FontSize="18" ></TextBlock>

                    </StackPanel>
                    <StackPanel Margin="30,25,0,0" >
                        <TextBlock HorizontalAlignment="Center"  FontSize="30" FontWeight="Bold" Text="5" ></TextBlock>
                        <StackPanel Margin="5" Orientation="Horizontal">
                            <Path HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="activeHoursIcon" Stretch="Uniform" Fill="Black" Width="25" Height="25"></Path>
                            <TextBlock Margin="5,0,0,0" Text="Active" FontSize="18" ></TextBlock>
                        </StackPanel>
                        <TextBlock Margin="5,0,0,0" Text="hours" HorizontalAlignment="Center" FontSize="18" ></TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

        </Border>

    </Grid>
</UserControl>
