<UserControl x:Class="HealthAnalysisDashboard.SleepDuration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             xmlns:local="clr-namespace:HealthAnalysisDashboard"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Grid.Row="1">
        <Grid.DataContext>
            <local:ViewModel x:Name="viewModel"/>
        </Grid.DataContext>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid  Grid.Column="0" Margin="20,0,10,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="2" Margin="0,8,60,8" CornerRadius="10" BorderBrush="Black" >
                    <StackPanel Grid.Row="100" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  >
                        <Path x:Name="sleepDuration"  Stretch="Uniform" Fill="Black" Width="50" Height="30">
                        </Path>
                        <TextBlock HorizontalAlignment="Center"
                                             Text="Sleep Tracker"
                                             FontWeight="Bold"
                                             FontSize="18"
                                             VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="#ffb902" Grid.Column="1" Margin="10,10,30,10" CornerRadius="10" BorderBrush="Black">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Goal 7.5 hrs" FontSize="12"/>
                        <TextBlock FontWeight="Bold" Text="3.2 miles" HorizontalAlignment="Center"  FontSize="18"></TextBlock>
                    </StackPanel>
                </Border>

                <Border Background="#ffb902" Grid.Column="2" Margin="30,10,0,10" CornerRadius="10" BorderBrush="Black">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Daily Average" FontSize="12"/>
                        <TextBlock FontWeight="Bold" Text="6.32 hrs" HorizontalAlignment="Center"  FontSize="18"></TextBlock>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Background="White" Grid.Row="1" CornerRadius="10" BorderBrush="Black">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <syncfusion:SfChart Margin="5,10,15,5">
                    <syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:CategoryAxis PlotOffset="40" TickLineSize="0" ShowGridLines="False">
                            <syncfusion:CategoryAxis.AxisLineStyle>
                                <Style TargetType="Line"  >
                                    <Setter Property="StrokeThickness" Value="0"/>
                                </Style>

                            </syncfusion:CategoryAxis.AxisLineStyle>
                        </syncfusion:CategoryAxis>
                    </syncfusion:SfChart.PrimaryAxis>
                    <syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:NumericalAxis Minimum="2" TickLineSize="0" Maximum="10" Interval="2">
                            <syncfusion:NumericalAxis.AxisLineStyle>
                                <Style TargetType="Line"  >
                                    <Setter Property="StrokeThickness" Value="0"/>
                                </Style>

                            </syncfusion:NumericalAxis.AxisLineStyle>
                        </syncfusion:NumericalAxis>
                    </syncfusion:SfChart.SecondaryAxis>

                    <syncfusion:BubbleSeries ItemsSource="{Binding SleepData}"
                                                    XBindingPath="Day" 
                                                    YBindingPath="Hours"
                                                    ShowTooltip="True" Interior="#AE75DA"
                                                    EnableAnimation="True"
                                             Size="Hours">
                        <syncfusion:BubbleSeries.TooltipTemplate>
                            <DataTemplate>
                                <StackPanel  Background="Black" Orientation="Vertical">
                                    <TextBlock Text="{Binding Item.Day}"
                                      Foreground="White" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Border Height="1.5" Margin="0,5,0,5" Background="White" ></Border>
                                    <StackPanel Orientation="Horizontal" >
                                        <Border HorizontalAlignment="Left" Margin="0,0,5,0" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Background="#AE75DA" Height="10" Width="10" ></Border>
                                        <TextBlock Text="{Binding Item.Hours, StringFormat={}{0} Hours}"
                                         Foreground="White" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </StackPanel>

                                </StackPanel>
                            </DataTemplate>
                        </syncfusion:BubbleSeries.TooltipTemplate>
                    </syncfusion:BubbleSeries>
                </syncfusion:SfChart>
            </Border>
        </Grid>


        <Border Grid.Column="1" CornerRadius="10" BorderBrush="Black" Background="#E5D9F2" Margin="10,10,20,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Margin="0,10,0,0" Grid.Row="0" Text="Sleep Quality" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18"/>

                <syncfusion:SfChart Margin="0,-15,0,0" Grid.Row="1" >

                    <syncfusion:DoughnutSeries x:Name="doughnutSeries" ItemsSource="{Binding SleepActivityData}"
                         XBindingPath="SleepType" Palette="Custom"
                         YBindingPath="Hours"  StartAngle="0" EndAngle="-180"
                         DoughnutSize="1"  ShowTooltip="True"
                         EnableAnimation="True">
                        <syncfusion:DoughnutSeries.TooltipTemplate>
                            <DataTemplate>
                                <StackPanel Background="Black" Margin="4" Orientation="Vertical">
                                    <TextBlock Text="{Binding Item.SleepType}" 
                       Foreground="White" FontWeight="Bold" FontSize="14" />
                                    <TextBlock Text="{Binding Item.Hours, StringFormat={}{0} hrs}" 
                       Foreground="White" FontSize="12" Margin="0,4,0,0" />
                                </StackPanel>
                            </DataTemplate>
                        </syncfusion:DoughnutSeries.TooltipTemplate>
                        <syncfusion:DoughnutSeries.ColorModel>
                            <syncfusion:ChartColorModel>
                                <syncfusion:ChartColorModel.CustomBrushes>
                                    <SolidColorBrush Color="#9929EA"/>
                                    <SolidColorBrush Color="#B13BFF"/>
                                    <SolidColorBrush Color="#471396"/>
                                    <SolidColorBrush Color="#090040"/>
                                </syncfusion:ChartColorModel.CustomBrushes>
                            </syncfusion:ChartColorModel>
                        </syncfusion:DoughnutSeries.ColorModel>
                        <syncfusion:DoughnutSeries.CenterView>
                            <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" >
                                <StackPanel >
                                    <TextBlock Margin="0,0,0,0" Text="Total hours of sleep" FontSize="16"  HorizontalAlignment="Center"/>
                                    <TextBlock Text="9" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </ContentControl>
                        </syncfusion:DoughnutSeries.CenterView>
                    </syncfusion:DoughnutSeries>

                </syncfusion:SfChart>
                <StackPanel Margin="0,-80,0,0" Orientation="Horizontal" Grid.Row="2">
                    <TextBlock FontWeight="Bold" Margin="90,0,0,0" Text="9:40 pm" ></TextBlock>
                    <TextBlock FontWeight="Bold" Margin="210,0,0,0" Text="6:40 am" ></TextBlock>
                </StackPanel>

                <Grid Grid.Row="3" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <UniformGrid Grid.Row="1" Columns="2" Rows="2" Margin="0,25,0,0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <!-- Deep Sleep -->
                        <Border Height="100"  BorderThickness="0.5" BorderBrush="Black" CornerRadius="10" Margin="15" >
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="4h 48 mins" FontSize="18" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                                <TextBlock Text="Deep Sleep" FontSize="14" Foreground="Black" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Light Sleep -->
                        <Border BorderThickness="0.5" BorderBrush="Black" CornerRadius="10" Margin="15" Padding="10">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="2h 24 mins" FontSize="18" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                                <TextBlock Text="Light Sleep" FontSize="14" Foreground="Black" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Awake -->
                        <Border BorderThickness="0.5" BorderBrush="Black" CornerRadius="10" Margin="15" Padding="10">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="30 mins" FontSize="18" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                                <TextBlock Text="Awake" FontSize="14" Foreground="Black" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- REM -->
                        <Border BorderThickness="0.5" BorderBrush="Black" CornerRadius="10" Margin="15" Padding="10">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="2h 12 mins" FontSize="18" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center"/>
                                <TextBlock Text="REM" FontSize="14" Foreground="Black" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </Grid>

            </Grid>

               


        </Border>

    </Grid>
</UserControl>
