<Window x:Class="HealthAnalysisDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthAnalysisDashboard"
        mc:Ignorable="d"
    xmlns:syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
    WindowState="Maximized">

    <Border BorderThickness="5" Margin="10" CornerRadius="10" BorderBrush="Black" >
        <Grid >
            <Grid.DataContext>
                <local:ViewModel x:Name="viewModel"/>
            </Grid.DataContext>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border x:Name="caloriesEatenBorder" Background="#DCDCDC" MouseDown="caloriesEaten_MouseDown" Margin="20,10,10,10" Grid.Column="0" CornerRadius="10" BorderThickness="1" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Path x:Name="caloriesEaten"  Stretch="Uniform" Fill="#FFFEFEFE" Width="50" Height="50">
                        </Path>
                        <StackPanel Margin="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock Text="1300" FontSize="22" Foreground="White" FontWeight="Bold" />
                            <TextBlock Text="Calorious eaten" FontSize="16" Foreground="White" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border x:Name="stepTakenBorder" Background="#DCDCDC" MouseDown="stepTaken_MouseDown" Margin="10" Grid.Column="1" CornerRadius="10"  BorderThickness="1" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Path x:Name="stepTakan" Stretch="Uniform" Fill="#FFFFFFFF" Width="50" Height="50">
                        </Path>
                        <StackPanel Margin="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock Foreground="White" Text="52,100" FontSize="22" FontWeight="Bold" />
                            <TextBlock Foreground="White" Text="Steps Taken" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border x:Name="waterConsumedBorder" Margin="10" Background="#DCDCDC" MouseDown="waterConsumed_MouseDown"  Grid.Column="2" CornerRadius="10" BorderThickness="1" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Path x:Name="waterConsumed" Stretch="Uniform" Fill="#FFFEFEFE" Width="40" Height="40" >
                        </Path>
                        <StackPanel Margin="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock Foreground="White" Text="37.6 ltr" FontSize="22" FontWeight="Bold" />
                            <TextBlock Foreground="White" Text="Water Consumed" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border x:Name="sleepDurationBorder" Background="#DCDCDC" MouseDown="sleepDuration_MouseDown" Margin="10,10,20,10" Grid.Column="3" CornerRadius="10" BorderThickness="1" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Path x:Name="sleepDuration" Stretch="Uniform" Fill="#FFFEFEFE" Width="50" Height="50">
                        </Path>
                        <StackPanel Margin="10" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
                            <TextBlock Foreground="White" Text="50 Hr" FontSize="22" FontWeight="Bold" />
                            <TextBlock Foreground="White" Text="Sleep Duration" FontSize="16" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <ContentControl x:Name="mainView" Grid.Row="1"/>
        </Grid>
    </Border>

</Window>
