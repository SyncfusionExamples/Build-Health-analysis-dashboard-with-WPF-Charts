<UserControl x:Class="HealthAnalysisDashboard.CaloriesEaten"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthAnalysisDashboard"
             xmlns:syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             mc:Ignorable="d"  >

    <Grid>
        <Grid.DataContext>
            <local:ViewModel x:Name="viewModel"/>
        </Grid.DataContext>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid  Grid.Column="0" Margin="20,0,10,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" BorderThickness="2" Margin="0,8,60,8" CornerRadius="10" BorderBrush="Black" >
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  >
                        <Path x:Name="caloriesPath"  Stretch="Uniform" Fill="Black" Width="50" Height="30">
                        </Path>
                        <TextBlock HorizontalAlignment="Center"
                                             Text="Calories Consumed"
                                             FontWeight="Bold"
                                             FontSize="18"
                                             VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="#ffb902" Grid.Column="1" Margin="10,10,30,10" CornerRadius="10" BorderBrush="Black">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Today" HorizontalAlignment="Center" FontSize="12"/>
                        <TextBlock Text="1437 kcal" FontWeight="Bold" FontSize="18"></TextBlock>
                    </StackPanel>
                </Border>

                <Border Background="#ffb902" Grid.Column="2" Margin="30,10,0,10" CornerRadius="10" BorderBrush="Black">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Daily Average" FontSize="12"/>
                        <TextBlock Text="902 kcal" FontWeight="Bold" FontSize="18"></TextBlock>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Background="White" Grid.Row="1" CornerRadius="10" BorderBrush="Black">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                <syncfusion:SfChart Margin="5,10,15,5">
                    <syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:CategoryAxis LabelPlacement="BetweenTicks" FontSize="13" ShowGridLines="False">
                        </syncfusion:CategoryAxis>
                    </syncfusion:SfChart.PrimaryAxis>
                    <syncfusion:SfChart.SecondaryAxis>
                        <syncfusion:NumericalAxis LabelFormat="{}0 cal"  FontSize="13" Minimum="0" TickLineSize="0" Maximum="3500" Interval="500">
                            <syncfusion:NumericalAxis.AxisLineStyle>
                                <Style TargetType="Line"  >
                                    <Setter Property="StrokeThickness" Value="0"/>
                                </Style>
                            </syncfusion:NumericalAxis.AxisLineStyle>
                        </syncfusion:NumericalAxis>
                    </syncfusion:SfChart.SecondaryAxis>

                    <syncfusion:SfChart.Annotations>
                        <syncfusion:LineAnnotation StrokeDashArray="5,5" X1="-0.5" Y1="2000" X2="6" Y2="2000"/>
                        <syncfusion:LineAnnotation StrokeDashArray="5,5" X1="-0.5" Y1="2800" X2="6" Y2="2800" />
                        <syncfusion:TextAnnotation Text="Daily Average 2800 cal" FontSize="13" FontWeight="Bold" X1="4.7" Y1="3050"/>
                        <syncfusion:TextAnnotation Text="Today 2000 cal" FontSize="13" FontWeight="Bold" X1="4.7" Y1="2250"/>
                    </syncfusion:SfChart.Annotations>

                    <syncfusion:LineSeries ItemsSource="{Binding CalorieData}"
                                                    XBindingPath="Day" Interior="#7AB9DD"
                                                    YBindingPath="Calories"
                                                    ShowTooltip="True"
                                                    EnableAnimation="True">
                        <syncfusion:LineSeries.TooltipTemplate>
                            <DataTemplate>
                                <StackPanel  Background="Black" Orientation="Vertical">
                                    <TextBlock Text="{Binding Item.Day}"
                                               Foreground="White" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Border Height="1.5" Margin="0,5,0,5" Background="White" ></Border>
                                    <StackPanel Orientation="Horizontal" >
                                        <Border HorizontalAlignment="Left" Margin="0,0,5,0" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Background="#7AB9DD" Height="10" Width="10" ></Border>
                                        <TextBlock Text="{Binding Item.Calories, StringFormat={}{0} cal}"
                                                Foreground="White" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </syncfusion:LineSeries.TooltipTemplate>
                        <syncfusion:LineSeries.AdornmentsInfo>
                            <syncfusion:ChartAdornmentInfo ShowMarker="True"
                                                    SymbolStroke="#20699C"
                                                    SymbolHeight="10" 
                                                    SymbolWidth="10" 
                                                    SymbolInterior="#7AB9DD"
                                                    Symbol="Ellipse"/>
                        </syncfusion:LineSeries.AdornmentsInfo>
                    </syncfusion:LineSeries>
                </syncfusion:SfChart>
            </Border>
        </Grid>

        <Border Grid.Column="1" CornerRadius="10" BorderBrush="Black" Background="#e3edf5" Margin="10,10,20,20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <!-- Title -->
                        <RowDefinition Height="6*"/>
                        <!-- Chart -->
                        <RowDefinition Height="4*"/>
                        <!-- Nutrient Items -->
                    </Grid.RowDefinitions>

                    <TextBlock Margin="20,0,0,0" Grid.Row="0" Text="Macro Nutrients" HorizontalAlignment="Left" FontWeight="Bold" FontSize="18"/>

                    <syncfusion:SfChart Grid.Row="1" >
                        <syncfusion:DoughnutSeries x:Name="doughnutSeries" ItemsSource="{Binding MacroNutrients}"
                                   XBindingPath="Name"
                                   YBindingPath="Amount" Palette="Custom" StartAngle="-225" EndAngle="45"
                                   DoughnutCoefficient="0.5"
                                   EnableAnimation="True">
                            <syncfusion:DoughnutSeries.ColorModel>
                                <syncfusion:ChartColorModel>
                                    <syncfusion:ChartColorModel.CustomBrushes>
                                        <SolidColorBrush Color="#7AB9DD"/>
                                        <SolidColorBrush Color="#5A9AC6"/>
                                        <SolidColorBrush Color="#428BBA"/>
                                        <SolidColorBrush Color="#20699C"/>
                                        <SolidColorBrush Color="#0E5585"/>
                                        <SolidColorBrush Color="#033466"/>
                                    </syncfusion:ChartColorModel.CustomBrushes>
                                </syncfusion:ChartColorModel>
                            </syncfusion:DoughnutSeries.ColorModel>
                            <syncfusion:DoughnutSeries.CenterView>
                                <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <StackPanel>
                                        <TextBlock Margin="0,0,5,0" Text="1800" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                                        <TextBlock Margin="0,0,0,15" Text="Cal consumed" FontSize="16" HorizontalAlignment="Center"/>
                                        <Border Height="0.5" Background="Black"/>
                                        <TextBlock Text="1000 Cal left" FontSize="14" HorizontalAlignment="Center" Margin="0,5,0,20"/>
                                    </StackPanel>
                                </ContentControl>
                            </syncfusion:DoughnutSeries.CenterView>
                        </syncfusion:DoughnutSeries>
                    </syncfusion:SfChart>

                    <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="40,0,10,20">
                        <ItemsControl x:Name="nutrientsItems" ItemsSource="{Binding MacroNutrients}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <Rectangle Width="6" Height="30" Fill="{Binding Color}" Margin="0,5,10,10"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Amount, StringFormat={}{0}g}" FontSize="14" FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Name}" FontSize="12"/>
                                        </StackPanel>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Grid>

                <StackPanel VerticalAlignment="Center" Grid.Column="1" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Border x:Name="breakfast" BorderThickness="1" CornerRadius="15" BorderBrush="Black"  Width="90" Height="95" Margin="10"  MouseDown="Breakfast_MouseDown">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Path x:Name="breakfastPath" Stretch="Uniform" Fill="#FF000000" Width="50" Height="50" >
                            </Path>
                            <TextBlock Text="Breakfast" FontSize="14" Foreground="Black" FontWeight="Bold" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border x:Name="lunch" BorderThickness="1" CornerRadius="15" Width="90" BorderBrush="Black" Height="95" Margin="10" MouseDown="Lunch_MouseDown" >
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Path x:Name="lunchPath" Stretch="Uniform" Fill="#FF000000" Width="50" Height="50">
                            </Path>
                            <TextBlock Text="Lunch" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border x:Name="dinner" BorderThickness="1" CornerRadius="15" Width="90" BorderBrush="Black" Height="95" Margin="10" MouseDown="Dinner_MouseDown">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Path x:Name="dinnerPath" Stretch="Uniform" Fill="Black" Width="40" Height="40" Margin="0,0,0,5">

                            </Path>
                            <TextBlock Text="Dinner" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border x:Name="snack" BorderThickness="1" CornerRadius="15" Width="90" BorderBrush="Black" Height="95" Margin="10" MouseDown="Snack_MouseDown" >
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Path x:Name="snackPath" Stretch="Uniform" Fill="#FF000000" Width="50" Height="50" >
                            </Path>
                            <TextBlock Text="Snack" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </StackPanel>

            </Grid>
        </Border>
    </Grid>

</UserControl>
