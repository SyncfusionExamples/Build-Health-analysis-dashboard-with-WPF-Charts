<UserControl x:Class="HealthAnalysisDashboard.WaterConsumed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthAnalysisDashboard"
             mc:Ignorable="d" 
             xmlns:syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             >
    <Grid>
        <Grid Grid.Row="1">
            <Grid.DataContext>
                <local:ViewModel x:Name="viewModel"/>
            </Grid.DataContext>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid  Grid.Column="0" Margin="20,0,10,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="6*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderThickness="2" Margin="0,8,60,8" CornerRadius="10" BorderBrush="Black" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  >
                            <Path x:Name="WaterConsumedPath"  Stretch="Uniform" Fill="Black" Width="50" Height="30">
                            </Path>
                            <TextBlock HorizontalAlignment="Center"
                                             Text="Water Consumption"
                                             FontWeight="Bold"
                                             FontSize="18" 
                                             VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#ffb902" Grid.Column="1" Margin="10,10,30,10" CornerRadius="10" BorderBrush="Black">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Target" FontSize="12"/>
                            <TextBlock FontWeight="Bold" Text="7 Litres" HorizontalAlignment="Center"  FontSize="18"></TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="#ffb902" Grid.Column="2" Margin="30,10,0,10" CornerRadius="10" BorderBrush="Black">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Daily Average" FontSize="12"/>
                            <TextBlock FontWeight="Bold" Text="4.22 Litres" HorizontalAlignment="Center"  FontSize="18"></TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Background="White" Grid.Row="1" CornerRadius="10" BorderBrush="Black">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <syncfusion:SfChart Margin="5,10,15,5">
                        <syncfusion:SfChart.PrimaryAxis>
                            <syncfusion:CategoryAxis ShowGridLines="False" TickLineSize="0" PlotOffset="10">
                                <syncfusion:CategoryAxis.AxisLineStyle>
                                    <Style TargetType="Line"  >
                                        <Setter Property="StrokeThickness" Value="0"/>
                                    </Style>

                                </syncfusion:CategoryAxis.AxisLineStyle>
                            </syncfusion:CategoryAxis>
                        </syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:SfChart.SecondaryAxis>
                            <syncfusion:NumericalAxis TickLineSize="0" Minimum="2" Maximum="10">
                                <syncfusion:NumericalAxis.AxisLineStyle>
                                    <Style TargetType="Line"  >
                                        <Setter Property="StrokeThickness" Value="0"/>
                                    </Style>
                                </syncfusion:NumericalAxis.AxisLineStyle>
                            </syncfusion:NumericalAxis>
                        </syncfusion:SfChart.SecondaryAxis>

                        <syncfusion:SfChart.Annotations>
                            <syncfusion:LineAnnotation StrokeDashArray="3,2" X1="-0.5" Y1="7" X2="6.5" Y2="7"/>
                            <syncfusion:TextAnnotation Text="Target" FontWeight="Bold" X1="5.5" Y1="7.5"/>
                        </syncfusion:SfChart.Annotations>

                        <syncfusion:SplineSeries ItemsSource="{Binding WaterConsumedData}"
                                                    XBindingPath="Day" 
                                                    YBindingPath="Liters"
                                                    ShowTooltip="True" Interior="#77BEF0"
                                                    EnableAnimation="True">
                            <syncfusion:SplineSeries.TooltipTemplate>
                                <DataTemplate>
                                    <StackPanel  Background="Black" Orientation="Vertical">
                                        <TextBlock Text="{Binding Item.Day}"
                                             Foreground="White" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Border Height="1.5" Margin="0,5,0,5" Background="White" ></Border>
                                        <StackPanel Orientation="Horizontal" >
                                            <Border HorizontalAlignment="Left" Margin="0,0,5,0" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Background="#77BEF0" Height="10" Width="10" ></Border>
                                            <TextBlock Text="{Binding Item.Liters, StringFormat={}{0} Liters}"
                                              Foreground="White" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>

                                    </StackPanel>
                                </DataTemplate>
                            </syncfusion:SplineSeries.TooltipTemplate>
                            <syncfusion:SplineSeries.AdornmentsInfo>
                                <syncfusion:ChartAdornmentInfo ShowMarker="True"
                                                   SymbolStroke="#647FBC"
                                                   SymbolHeight="10"
                                                   SymbolWidth="10"
                                                   SymbolInterior="#3396D3"
                                                   Symbol="Ellipse"/>
                            </syncfusion:SplineSeries.AdornmentsInfo>
                        </syncfusion:SplineSeries>
                    </syncfusion:SfChart>
                </Border>
            </Grid>

            <Border  Grid.Column="1" CornerRadius="10" BorderBrush="Black" Background="#F2F9FF" Margin="10,10,20,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>

                <StackPanel Margin="0,10,0,0" Grid.Column="0" >
                    <TextBlock Text="Sunday Activity" HorizontalAlignment="Center" Margin="20,20,20,100" FontWeight="Bold" FontSize="18"/>
                    <syncfusion:SfChart Width="420">
                        <syncfusion:SfChart.PrimaryAxis>
                            <syncfusion:CategoryAxis ShowGridLines="False" TickLineSize="0">
                                <syncfusion:CategoryAxis.AxisLineStyle>
                                    <Style TargetType="Line"  >
                                        <Setter Property="StrokeThickness" Value="0"/>
                                    </Style>
                                </syncfusion:CategoryAxis.AxisLineStyle>
                            </syncfusion:CategoryAxis>
                        </syncfusion:SfChart.PrimaryAxis>
                        
                        <syncfusion:SfChart.SecondaryAxis>
                            <syncfusion:NumericalAxis Minimum="0" TickLineSize="0"  Interval="1" Header="Liters">
                                <syncfusion:NumericalAxis.AxisLineStyle>
                                    <Style TargetType="Line"  >
                                        <Setter Property="StrokeThickness" Value="0"/>
                                    </Style>
                                </syncfusion:NumericalAxis.AxisLineStyle>
                            </syncfusion:NumericalAxis>
                        </syncfusion:SfChart.SecondaryAxis>

                        <syncfusion:SfChart.Behaviors>
                            <syncfusion:ChartSelectionBehavior EnableSegmentSelection="True" >
                            </syncfusion:ChartSelectionBehavior>
                        </syncfusion:SfChart.Behaviors>

                        <syncfusion:ColumnSeries x:Name="series" ItemsSource="{Binding DailyWaterConsumedData}" 
                                                XBindingPath="Time" Interior="#77BEF0" ShowTooltip="True"
                                                YBindingPath="Liters" EnableAnimation="True"
                                               StrokeThickness="2">
                            <syncfusion:ColumnSeries.TooltipTemplate>
                                <DataTemplate>
                                    <StackPanel Background="Black"  Orientation="Horizontal">
                                        <TextBlock Text="{Binding Item.Time}" 
                                             Foreground="White" FontWeight="Bold" FontSize="14" />
                                        <TextBlock Text="  :  "
                                              Foreground="White" FontWeight="Bold" FontSize="14" />
                                        <TextBlock Text="{Binding Item.Liters, StringFormat={}{0} Liter}" 
                                              Foreground="White" FontWeight="Bold" FontSize="14" />
                                    </StackPanel>
                                </DataTemplate>
                            </syncfusion:ColumnSeries.TooltipTemplate>
                        </syncfusion:ColumnSeries>
                    </syncfusion:SfChart>

                    <StackPanel Orientation="Horizontal">
                        <Grid Margin="20,60,10,20">
                            <Border BorderThickness="1"
                                    BorderBrush="Gray"
                                    CornerRadius="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Width="200"
                                    Height="80">
                                <StackPanel Orientation="Horizontal">
                                    <!-- Goal Section -->
                                    <TextBlock Text="Goal"
                                               Foreground="Black"
                                               FontSize="18"
                                               Padding="30,30,40,30"
                                               VerticalAlignment="Center" />
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center">     
                                        <TextBlock Text="3500"
                                                   Foreground="Black"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center" />
                                        <TextBlock Text="ml"
                                                   FontWeight="Bold"
                                                   Foreground="Black"
                                                   FontSize="18"
                                                   Margin="4,0,0,0"
                                                   VerticalAlignment="Bottom" />    
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                        <Grid Margin="20,60,20,20">
                            <Border BorderThickness="1"
                                    BorderBrush="Gray"
                                    CornerRadius="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Width="200"
                                    Height="80">            
                                <StackPanel Orientation="Horizontal">
                                    <!-- Now Section -->
                                    <TextBlock Text="Now"
                                               Foreground="Black"
                                               FontSize="18"
                                               Padding="30,30,40,30"
                                               VerticalAlignment="Center" />    
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center">
                                        <TextBlock Text="700"
                                                   Foreground="Black"
                                                   FontSize="20"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center" />
                                        <TextBlock Text="ml"
                                                   FontWeight="Bold"
                                                   Foreground="Black"
                                                   FontSize="18"
                                                   Margin="4,0,0,0"
                                                   VerticalAlignment="Bottom" />            
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </StackPanel>

            </Border>

        </Grid>
    </Grid>
</UserControl>
