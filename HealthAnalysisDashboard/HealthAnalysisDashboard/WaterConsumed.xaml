<UserControl x:Class="HealthAnalysisDashboard.WaterConsumed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthAnalysisDashboard"
             mc:Ignorable="d" 
             xmlns:syncfusion="clr-namespace:Syncfusion.UI.Xaml.Charts;assembly=Syncfusion.SfChart.WPF"
             >
    <Grid>
        <Grid Grid.Row="1">
            <Grid.DataContext>
                <local:ViewModel x:Name="viewModel"/>
            </Grid.DataContext>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid  Grid.Column="0" Margin="20,0,10,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="6*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderThickness="2" Margin="0,8,60,8" CornerRadius="10" BorderBrush="Black" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"  >
                            <Path x:Name="WaterConsumedPath"  Stretch="Uniform" Fill="Black" Width="50" Height="30">
                            </Path>
                            <TextBlock HorizontalAlignment="Center"
                                             Text="Water Consumption"
                                             FontWeight="Bold"
                                             FontSize="18" 
                                             VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#ffb902" Grid.Column="1" Margin="10,10,30,10" CornerRadius="10" BorderBrush="Black">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Target" FontSize="12"/>
                            <TextBlock FontWeight="Bold" Text="7 litres" HorizontalAlignment="Center"  FontSize="18"></TextBlock>
                        </StackPanel>
                    </Border>

                    <Border Background="#ffb902" Grid.Column="2" Margin="30,10,0,10" CornerRadius="10" BorderBrush="Black">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="Daily Average" FontSize="12"/>
                            <TextBlock FontWeight="Bold" Text="4.22 litres" HorizontalAlignment="Center"  FontSize="18"></TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>

                <Border Background="White" Grid.Row="1" CornerRadius="10" BorderBrush="Black">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <syncfusion:SfChart Margin="5,10,15,5">
                        <syncfusion:SfChart.PrimaryAxis>
                            <syncfusion:CategoryAxis ShowGridLines="False" LabelPlacement="BetweenTicks" FontSize="13"/>
                        </syncfusion:SfChart.PrimaryAxis>
                        <syncfusion:SfChart.SecondaryAxis>
                            <syncfusion:NumericalAxis TickLineSize="0" Header="Liters" FontSize="13" Minimum="2" Maximum="10">
                                <syncfusion:NumericalAxis.AxisLineStyle>
                                    <Style TargetType="Line"  >
                                        <Setter Property="StrokeThickness" Value="0"/>
                                    </Style>
                                </syncfusion:NumericalAxis.AxisLineStyle>
                            </syncfusion:NumericalAxis>
                        </syncfusion:SfChart.SecondaryAxis>

                        <syncfusion:SfChart.Annotations>
                            <syncfusion:LineAnnotation FontSize="13" StrokeDashArray="5,5" X1="-0.5" Y1="7" X2="6.5" Y2="7"/>
                            <syncfusion:TextAnnotation FontSize="13" Text="Target" FontWeight="Bold" X1="5.5" Y1="7.5"/>
                        </syncfusion:SfChart.Annotations>

                        <syncfusion:SplineSeries ItemsSource="{Binding WaterConsumedData}"
                                                    XBindingPath="Day" 
                                                    YBindingPath="Liters"
                                                    ShowTooltip="True" Interior="#77BEF0"
                                                    EnableAnimation="True">
                            <syncfusion:SplineSeries.TooltipTemplate>
                                <DataTemplate>
                                    <StackPanel  Background="Black" Orientation="Vertical">
                                        <TextBlock Text="{Binding Item.Day}"
                                             Foreground="White" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        <Border Height="1.5" Margin="0,5,0,5" Background="White" ></Border>
                                        <StackPanel Orientation="Horizontal" >
                                            <Border HorizontalAlignment="Left" Margin="0,0,5,0" BorderBrush="Black" BorderThickness="1" CornerRadius="10" Background="#77BEF0" Height="10" Width="10" ></Border>
                                            <TextBlock Text="{Binding Item.Liters, StringFormat={}{0} Liters}"
                                              Foreground="White" FontWeight="Medium" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </StackPanel>

                                    </StackPanel>
                                </DataTemplate>
                            </syncfusion:SplineSeries.TooltipTemplate>
                            <syncfusion:SplineSeries.AdornmentsInfo>
                                <syncfusion:ChartAdornmentInfo ShowMarker="True"
                                                   SymbolStroke="#20699C"
                                                   SymbolHeight="10"
                                                   SymbolWidth="10"
                                                   SymbolInterior="White"
                                                   Symbol="Ellipse"/>
                            </syncfusion:SplineSeries.AdornmentsInfo>
                        </syncfusion:SplineSeries>
                    </syncfusion:SfChart>
                </Border>
            </Grid>

            <Border  Grid.Column="1" CornerRadius="10" BorderBrush="Black" Background="#F2F9FF" Margin="10,10,20,20">
                <Border.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>


                <Grid Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Title -->
                        <RowDefinition Height="Auto"/>
                        <!-- Chart -->
                        <RowDefinition Height="Auto"/>
                        <!-- Goal and Now -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock Grid.Row="0" Text="Sunday Activity" HorizontalAlignment="Left" Margin="20,0,20,20" FontWeight="Bold" FontSize="18"/>

                    <!-- Chart -->
                    <syncfusion:SfChart Height="350" Grid.Row="1" Margin="10,15,10,15">
                        <syncfusion:SfChart.PrimaryAxis>
                            <syncfusion:CategoryAxis ShowGridLines="False" FontSize="13" TickLineSize="0">
                                <syncfusion:CategoryAxis.AxisLineStyle>
                                    <Style TargetType="Line">
                                        <Setter Property="StrokeThickness" Value="0"/>
                                    </Style>
                                </syncfusion:CategoryAxis.AxisLineStyle>
                            </syncfusion:CategoryAxis>
                        </syncfusion:SfChart.PrimaryAxis>

                        <syncfusion:SfChart.SecondaryAxis>
                            <syncfusion:NumericalAxis Minimum="0" TickLineSize="0" FontSize="13" Interval="250" LabelFormat="{}0 ml">
                                <syncfusion:NumericalAxis.MajorGridLineStyle>
                                    <Style TargetType="Line">
                                        <Setter Property="StrokeThickness" Value="1.5"/>
                                        <Setter Property="Stroke" Value="LightGray"/>
                                        <Setter Property="StrokeDashArray" Value="3,2"/>
                                    </Style>
                                </syncfusion:NumericalAxis.MajorGridLineStyle>
                                <syncfusion:NumericalAxis.AxisLineStyle>
                                    <Style TargetType="Line">
                                        <Setter Property="StrokeThickness" Value="0"/>
                                    </Style>
                                </syncfusion:NumericalAxis.AxisLineStyle>
                            </syncfusion:NumericalAxis>
                        </syncfusion:SfChart.SecondaryAxis>

                        <syncfusion:SfChart.Behaviors>
                            <syncfusion:ChartSelectionBehavior EnableSegmentSelection="True"/>
                        </syncfusion:SfChart.Behaviors>

                        <syncfusion:ColumnSeries x:Name="series" ItemsSource="{Binding DailyWaterConsumedData}" 
                                 XBindingPath="Time" Interior="#77BEF0" ShowTooltip="True"
                                 YBindingPath="Milliliters" EnableAnimation="True"
                                 StrokeThickness="2">
                            <syncfusion:ColumnSeries.TooltipTemplate>
                                <DataTemplate>
                                    <StackPanel Background="Black" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Item.Time}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="  :  " Foreground="White" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding Item.Milliliters, StringFormat={}{0} ml}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                    </StackPanel>
                                </DataTemplate>
                            </syncfusion:ColumnSeries.TooltipTemplate>
                        </syncfusion:ColumnSeries>
                    </syncfusion:SfChart>

                    <!-- Goal and Now Section -->
                    <Grid Margin="0,25,0,0" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Goal -->
                        <Grid Grid.Column="0" HorizontalAlignment="Center" >
                            <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="20"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Goal" Foreground="Black" FontSize="18" Padding="20" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,20,20,20" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="7500"  Foreground="Black" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                                        <TextBlock Text="ml" FontWeight="Bold" Foreground="Black" FontSize="18" Margin="4,0,0,1" VerticalAlignment="Bottom"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Now -->
                        <Grid Grid.Column="1" >
                            <Border BorderThickness="1" BorderBrush="Gray" CornerRadius="20"
                                    HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Today" Foreground="Black" FontSize="18" Padding="20" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,20,20,20" HorizontalAlignment="Right" VerticalAlignment="Center">
                                        <TextBlock Text="5600" Foreground="Black" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                                        <TextBlock Text="ml" FontWeight="Bold" Foreground="Black" FontSize="18" Margin="4,0,0,1" VerticalAlignment="Bottom"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
